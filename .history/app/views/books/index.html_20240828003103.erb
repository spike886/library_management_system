<p style="color: green"><%= notice %></p>

<% content_for :title, "Books" %>

<h1>Book1s</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<% if current_user.librarian? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
